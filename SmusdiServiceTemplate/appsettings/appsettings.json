{
  "ConnectionStrings": {
    "postgresql": "server=%SMUSDI_POSTGRESQL_SERVER%;Port=49153;Database=%SMUSDI_POSTGRESQL_DATABASE%;UserId=%SMUSDI_POSTGRESQL_USER%;Password=%SMUSDI_POSTGRESQL_PASSWORD%;Trust Server Certificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
      "Microsoft.AspNetCore.Authentication.JwtBearer": "Information"
    }
  },
  "AllowedHosts": "*",
  "oauth": {
    "authority": "%SMUSDI_OAUTH_URL%"
  },
  "swagger": {
    "contactName": "TO_BE_SET",
    "contactMail": "TO_BE_SET"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-%SMUSDI_SERVICE_NAME%.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 50000000,
          "rollOnFileSizeLimit": true,
          "buffered": false
        }
      }
    ]
  }
}